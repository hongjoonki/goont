html
  head
    title Future Imperfect by HTML5 UP
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    //if lte IE 8
      script(src='assets/js/ie/html5shiv.js')
    link(rel='stylesheet', href='assets/css/main.css')
    //if lte IE 9
      link(rel='stylesheet', href='assets/css/ie9.css')
    //if lte IE 8
      link(rel='stylesheet', href='assets/css/ie8.css')
  body
    // Wrapper
    #wrapper
      // Header
      header#header
        h1
          a(href='/') Go on Trip
        nav.links
          ul
            li
              a(href='/Introduction') Introduction
            li
              a(href='/Community') Community
            li
              a(href='/Information') information
            li
              a(href='/QandA') Q&A
        nav.main
          if nickName
            ul
              li
                a Welcome 
                =nickName
              li
                a.button.small.fit(href='/logout') Logout
          else
            ul
              li
                a.button.small.fit(href='/login') Log In
              li
                a.button.small.fit(href='/register') Register
      // Main
      #main
        // Post
        article.post
          header
            .title
              h2
                a(href='/QandA') Q&A
              p Goont provide community & tourist information
            .meta
             img(src='images/logo3.png' width='200px' height='160px')
          each qanda in qandas
            article.post
                header
                  .title
                    h2
                      a(href='#')=qanda.qandatitle
                    p QUESTION
                  .meta
                    h3=qanda.qandatimeat
                    a.author(href='#')
                      span.name=qanda.nickName
                      img(src='images/uploads/'+qanda.userimg, alt='')
                p=qanda.qandacontent
                footer
                  ul.actions
                    li
                      a.button.big(href='#') Continue Reading
                    if(nickName===qanda.nickName)
                      li
                        a.button.big(href='/QandAdelete/'+qanda.id) DELETE
                  ul.stats
                    li
                      a(href='#') General
                    
                each comment in comments
                  if(qanda.id===comment.qandaid)
                    section
                          ul.posts
                            li
                              article
                                header
                                  h3
                                    =comment.nickName
                                    br
                                    br
                                    =comment.answercontent
                                  a.button.small(href='/QandAcomment/'+comment.id) X
                                  a.author(href='#')=comment.qandacommenttimeat
                                a.author.comment(href='#')
                                  img(src='images/uploads/'+comment.userimg, alt='')
                    
                  


                if(nickName==='관리자')
                  form#search(action='/QandAcomment/'+qanda.id method='post')
                    textarea(type='text', name='answercontent', placeholder='ANSWER')
                    br
                    input(type='submit', value='SAVE')





          
        ul.actions.pagination
          li
            a.disabled.button.big.previous(href='') Previous Page
          li
            a.button.big.next(href='#') Next Page
        ul.actions(style='text-align: right')
          li
            a.button.big(href='/UploadQandA') upload
      

      section#footer
        section
          a(href='/QandA')
            p(style='font-size: 2em') Q&A
          
        ul.icons
          li
            a.fa-twitter(href='#')
              span.label Twitter
          li
            a.fa-facebook(href='#')
              span.label Facebook
          li
            a.fa-instagram(href='#')
              span.label Instagram
          li
            a.fa-rss(href='#')
              span.label RSS
          li
            a.fa-envelope(href='#')
              span.label Email
        p.copyright
          | © Untitled. Design: 
          a(href='http://html5up.net') HTML5 UP
          | . Images: 
          a(href='http://unsplash.com') Unsplash
          | .

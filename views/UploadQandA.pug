  body
    // Wrapper
    #wrapper
      // Header
      header#header
        h1
          a(href='/') Go on Trip
        nav.links
          ul
            li
              a(href='/Introduction') Introduction
            li
              a(href='/Community') Community
            li
              a(href='/Information') information
            li
              a(href='/QandA') Q&A
        nav.main
          if nickName
            ul
              li
                a Welcome 
                =nickName
              li
                a.button.small.fit(href='/logout') Logout
          else
            ul
              li
                a.button.small.fit(href='/login') Log In
              li
                a.button.small.fit(href='/register') Register
      // Main
      #main
        section
          h2 upload
          form(action='/UploadQandA' method='post')
            input(type='text', name='qandatitle', placeholder='Question')
            br
            textarea(type='text', name='qandacontent', placeholder='Enter your question')
            br
            br
            input.big(type='submit', value='Save')
            

            
            
      // Footer
      section#footer
        section
          a(href='/QandA')
            p(style='font-size: 2em') Q&A
         
        ul.icons
          li
            a.fa-twitter(href='#')
              span.label Twitter
          li
            a.fa-facebook(href='#')
              span.label Facebook
          li
            a.fa-instagram(href='#')
              span.label Instagram
          li
